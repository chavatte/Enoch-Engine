# --- Configurações do Servidor ---
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
CORS_ALLOWED_ORIGINS=*

# --- Banco de Dados (PostgreSQL) ---
HOST_DB=localhost
PORT_DB=5432
USER_DB=postgres
PASSWORD_DB=postgres
DB=database_name
DIALECT_DB=postgres

# Schemas (Multi-Tenancy / Isolamento)
SCHEMA_DB=app_production
SCHEMA_DB_DEV=app_development
SCHEMA_DB_BACKUP=app_backup
SCHEMA_DB_BACKUP_DEV=app_backup_dev
SCHEMA_DB_TEST=app_test

# --- Segurança & Autenticação ---
JWT_SECRET=super_secret_key_change_me
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=10

# Cloudflare Turnstile (Captcha)
TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA
TURNSTILE_FRONTEND_KEY=1x00000000000000000000AA

# --- Armazenamento (Cloudflare R2 / S3 Compatible) ---
CLOUDFLARE_R2_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
CLOUDFLARE_ACCESS_KEY_ID=your_access_key
CLOUDFLARE_SECRET_ACCESS_KEY=your_secret_key
CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name
CLOUDFLARE_R2_PUBLIC_URL=https://pub-<hash>.r2.dev
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_API_TOKEN=your_api_token

# --- Email (Nodemailer / Gmail) ---
GMAIL_USER=seu_email@gmail.com
GMAIL_APP_PASSWORD=senha_de_app_gerada
EMAIL_TO_ADMIN=admin@empresa.com

# --- Testes Automatizados ---
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=Password123!